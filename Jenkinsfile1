pipeline{
    agent any
    stages{
        stage ("Building Docker Image"){
            steps{
                docker build -f 'files/Dockerfile' -t 'testimage:latest'
            }
        }
        stage ("Tag Image and Push"){
            steps{
                docker tag 'testimage:latest' 'realmisterpotato/testimage:latest'
            }
        }
        stage ("Deploy with Ansible"){
            steps{
                echo 'Deploy with ansible'
            }
        }
    }
}