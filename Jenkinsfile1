pipeline{
    agent any
    stages{
        stage ("Building Docker Image"){
            steps{
                sh "sudo docker build . -f 'files/Dockerfile_service1' -t 'testimage:latest'"
            }
        }
        stage ("Tag Image and Push"){
            steps{
                sh "sudo docker tag 'testimage:latest' 'realmisterpotato/testimage:latest'"
            }
        }
        stage ("Deploy with Ansible"){
            steps{
                echo 'Deploy with ansible'
            }
        }
    }
}